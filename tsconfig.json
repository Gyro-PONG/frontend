{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "paths": {
      "@/*": ["./*"]
    },

    // Bundle
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,

    // Linting
    "strict": true
  },
  "exclude": ["node_modules/*", "build"],
  "include": ["src/**/*", "vite.comfig.ts"]
}
